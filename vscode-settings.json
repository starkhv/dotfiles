{
    //vscode general config
    "editor.wordWrap": true,
    //prevent vscode from autocompleting when period is pressed
    //for example in javascript
    "editor.acceptSuggestionOnCommitCharacter": false

    // Vim-Mode Settings
    /* without this the esc and caps-lock do not swap in Vim mode
     despite changing it at OS level */
    "keyboard.dispatch": "keyCode",
    "vim.leader": "<space>",
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    //Vim like relative line numbers
    "editor.lineNumbers": "relative",
    //leader key based shortcuts
    "vim.normalModeKeyBindingsNonRecursive": [
            {
                "before": ["leader", "w"],
                "commands": [
                    "workbench.action.files.save"
                ]
            },
            {
                "before": ["leader", "leader", "q"],
                "commands": [
                    "workbench.action.closeWindow"
                ]
            },
            {
                "before": ["leader", "q"],
                "commands": [
                    "workbench.action.closeActiveEditor"
                ]
            },
            {
                "before": ["<C-l>"],
                "commands": [
                    "workbench.action.focusNextGroup"
                ]
            },
            {
                "before": ["<C-h>"],
                "commands": [
                    "workbench.action.focusPreviousGroup"
                ]
            },
            {
                "before": ["leader", "leader", "h"],
                "commands": [
                    "workbench.action.moveEditorToPreviousGroup"
                ]
            },
            {
                "before": ["leader", "leader", "l"],
                "commands": [
                    "workbench.action.moveEditorToNextGroup"
                ]
            },
            {
                "before": ["leader", "c"],
                "commands": [
                    "editor.action.commentLine"
                ]
            }
        ],


    //Live-server Settings
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "google-chrome-stable --incognito",
    "files.enableTrash": false
}